pipeline {
    agent any
    tools {
     maven "MAVEN_HOME"
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout your source code from version control
                git branch: 'master',
                url: git 'https://github.com/joel-s-das/GFG-32-BATCH-MAVEN.git',
                credentialsId: 'github-credentials'
            }
        }
        stage('Build') {
            steps {
                // Use Maven to build your project
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                // Run tests if applicable
                sh 'mvn test'
            }
        }
        
    }
}
